import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from statsmodels.tsa.filters.hp_filter import hpfilter
from pandas_datareader import data as pdr
import datetime

# === 設定 ===
FRED_SERIES_ID = 'ARGRGDPMQDSMEI'  # アルゼンチン実質GDP（四半期）
START_DATE = '2000-01-01'
END_DATE = '2024-12-31'
LAMBDAS = [10, 100, 1600, 3000]

# === データ取得 ===
print("FREDからデータを取得中...")
gdp_data = pdr.DataReader(FRED_SERIES_ID, 'fred', START_DATE, END_DATE)
gdp_data.dropna(inplace=True)

# === 対数変換 ===
log_gdp = np.log(gdp_data[FRED_SERIES_ID])

# === HPフィルターの適用 ===
trend_components = {}
cycle_components = {}
for lam in LAMBDAS:
    cycle, trend = hpfilter(log_gdp, lamb=lam)
    trend_components[lam] = trend
    cycle_components[lam] = cycle

# === トレンドの可視化 ===
plt.figure(figsize=(14, 6))
plt.plot(log_gdp, label='Log(Real GDP)', linewidth=2)
for lam in LAMBDAS:
    plt.plot(trend_components[lam], label=f'Trend (lambda={lam})')
plt.title('Log(Real GDP) and HP Filter Trend Components')
plt.xlabel('Date')
plt.ylabel('Log Scale')
plt.legend()
plt.grid(True)
plt.tight_layout()
plt.show()

# === 循環成分の可視化 ===
plt.figure(figsize=(14, 6))
for lam in LAMBDAS:
    plt.plot(cycle_components[lam], label=f'Cycle (lambda={lam})')
plt.title('HP Filter Cycle Components')
plt.xlabel('Date')
plt.ylabel('Deviation from Trend')
plt.legend()
plt.grid(True)
plt.tight_layout()
plt.show()
